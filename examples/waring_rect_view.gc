graph:
  nodes:
    - name:  img_size
      type:  source_param
      init:
        - type: UintSize
          value:
            width: 100
            height: 100

    - name:  seq_size
      type:  source_param
      init:
        - type: U32
          value: 10000

    - name:  waring_s
      type:  source_param
      init:
        - type: U32
          value: 2

    - name:  waring_k
      type:  source_param
      init:
        - type: U32
          value: 2

    - name: palette
      type: source_param
      init:
        - type: IndexedPalette
          value:
            color_map:
              - 0xffffffff
              - 0xff5953ff
              - 0xff8adabf
              - 0xffffc7f9
              - 0xffffff7f
              - 0xffd40004
              - 0xff00aa00
            overflow_color: 0xff000000

    - name: filter_value
      type: source_param
      init:
        - type: U32
          value: 0

    - name: sieve
      type: waring

    - name: view
      type: rect_view

    - name: filter
      type: filter_seq

  edges:
    - [seq_size,            sieve.count]
    - [img_size,            view.size]
    - [sieve.sequence,      view.sequence]
    - [palette,             view.palette]
    - [filter_value,        filter.value]
    - [sieve.sequence,      filter.sequence]
    - [waring_s,            sieve.s]
    - [waring_k,            sieve.k]

layout:
  type: horizontal_layout
  items:
    - type: vertical_layout
      items:
      - type: horizontal_layout
        items:
        - type: spin
          bind:
            node: img_size
            index: 0
            path: /width
          range: [1, 5000]
        - type: spin
          bind:
            node: img_size
            index: 0
            path: /height
          range: [1, 2000]
      - type: horizontal_layout
        items:
        - type: spin
          bind:
            node: waring_s
          range: [1, 100]
        - type: spin
          bind:
            node: waring_k
          range: [2, 100]
        - type: spin
          bind:
            node: seq_size
          range: [1, 1000000]
      - type: color
        bind:
          node: palette
          path: /overflow_color
      - type: vector
        bind:
          node: palette
          path: /color_map
      - type: spin
        bind:
          node: filter_value
        range: [0, 100]
      - type: stretch
    - type: vertical_layout
      items:
      - type: image
        bind: view
      - type: text
        bind: filter.indices

