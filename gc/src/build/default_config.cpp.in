#include "build/config.hpp"

namespace build {

auto default_config()
    -> Config
{
    return {
        .paths = {
            .cxx_compiler_executable = "@CMAKE_CXX_COMPILER_PATH@",
            .linker_executable = "@CXX_COMPILER_EXECUTABLE@"
        },
        .compile_flags = {
            .common = "@COMPILE_FLAGS@",
            .debug = "@COMPILE_FLAGS_DEBUG@",
            .release = "@COMPILE_FLAGS_RELEASE@"
        },
        .link_flags = {
            .common = "@LINK_FLAGS@",
            .shared = "@LINK_FLAGS_SHARED@"
        }
    };
}

} // namespace build
